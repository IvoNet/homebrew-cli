#!/usr/bin/env bash
if [ -z "$1" ]; then
    echo "Please provide an mkv file as parameter and the track to keep"
    echo "Syntax: $0 <mkv> <tracknr>"
    return 1
fi
SAVEIFS=$IFS
IFS=$(echo -en "\n\b")
mkv="$(basename $1)"
map="$(dirname $1)"
enc="${mkv%.*}.new.mkv"
enc="$(basename $enc)"
runit \
   --cpuset-cpus="1-2" \
   -v "$(pwd)/$map:/input:ro" \
   -v "$(pwd)/$map:/output:rw" \
   --entrypoint "mkvmerge" \
   ivonet/mediatools:latest \
   -i "/input/$mkv" -o "/output/$enc" --audio-tracks !$2
IFS=$SAVEIFS
